<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.punam.instagramcloneapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstagramCloneApp">
        <activity android:name="com.punam.instagramcloneapp.AddPostActivity"></activity>
        <activity android:name="com.punam.instagramcloneapp.HomePageActivity" />
        <activity android:name="com.punam.instagramcloneapp.SignUpPageActivity" />
        <activity android:name="com.punam.instagramcloneapp.StartPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>